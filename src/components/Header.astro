---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="logo-title">
        <a href="/"><img src="/favicon.svg" id="logo-nombre-header"> {SITE_TITLE}</a>
    </div>
    <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">Sobre nosotros</HeaderLink>
		<HeaderLink href="/contact">Contacto</HeaderLink>
    </div>
    <button id="theme-toggle" aria-label="Cambiar modo" class="theme-toggle">
        <span id="theme-icon">ðŸŒ™</span>
    </button>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	.logo-title {
        display: flex;
        align-items: center;
    }
    #logo-nombre-header {
        width: 100px;
        height: 100px;
        margin-right: 1em;
        display: block;
    }
    .logo-title a {
        display: flex;
        align-items: center;
        font-size: 1em;
        text-decoration: none;
        color: var(--black);
    }
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.internal-links {
    flex: 1;
    display: flex;
    justify-content: center;
    gap: 1em; /* Espacio entre los botones */
}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}

	.theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    margin-left: 1em;
    display: flex;
    align-items: center;
    color: var(--black);
    font-size: 1.5em;
}
.theme-toggle:focus {
    outline: 2px solid var(--accent);
}
:root {
    --black: 30, 30, 30;
    --white: 255, 255, 255;
    --accent: #0077ff;
    --footer-bg: #f5f5f5;
    --footer-text: #222;
}

[data-theme="dark"] {
    --black: 255, 255, 255;
    --white: 30, 30, 30;
    --accent: #ffd600;
    --footer-bg: #181818;
    --footer-text: #eee;
    background: #23272f; /* Fondo gris oscuro para el body */
}

body {
    background: rgb(var(--white));
    color: rgb(var(--black));
    transition: background 0.2s, color 0.2s;
}
</style>
